{% extends 'base.html.twig' %}

{% block title %}Recherche
{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1>
                <i class="fas fa-store"></i>
                {#{% trans %}boutique.recherche.recherche{% endtrans %} "{{recherche}}" </h1>#}
                {{ 'boutique.recherche.recherche' | trans({'{num}': produits|length}) | trans({'{libelle}': recherche})}}
        </div>
        <div class="card-body row">
            {% for produit in produits %}
                <div class="col-md-4">
                    <div class="card clickable" onclick="location = '/mi5/fr/panier/ajouter/4'">
                        <img src="{{asset(produit.visuel)}}" class="card-img-produit" alt="{{produit.libelle}}">
                        <div class="card-body">
                            <h4 class="card-title">{{produit.libelle}}</h4>
                            <p class="card-text">
                                <i>{{produit.texte}}</i>
                            </p>
                            <h2>
                                <span class="badge badge-primary">
                                    <i class="fas fa-cart-plus"></i>&nbsp;&nbsp; {{produit.prix}}â‚¬
                                </span>
                            </h2>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}